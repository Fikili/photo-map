<?xml version="1.0" encoding="UTF-8"?>
<model xmlns="http://www.alfresco.org/model/dictionary/1.0" name="photo:model">
    <description>Photo map model</description>
    <version>1.0</version>
    <imports>
        <!-- Import Alfresco Dictionary Definitions -->
        <import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d" />
        <!-- Import Alfresco Content Domain Model Definitions -->
        <import uri="http://www.alfresco.org/model/content/1.0" prefix="cm" />
    </imports>
    <namespaces>
        <!-- Define a Namespace for my new definitions -->
        <namespace uri="http://tieto.com/photo/1.0" prefix="photo" />
    </namespaces>
    <aspects>
        <aspect name="photo:metadata">
            <title>Photo metadata</title>
            <properties>
                <property name="photo:latitude">
                    <title>Latitude</title>
                    <type>d:double</type>
                </property>
                <property name="photo:longitude">
                    <title>Longitude</title>
                    <type>d:double</type>
                </property>
                <property name="photo:label">
                    <title>Photo label</title>
                    <type>d:text</type>
                </property>
            </properties>
        </aspect>
    </aspects>
</model>